{
  "name": "forcepoint-shared-components",
  "version": "1.0.0",
  "description": "Forcepoint shared components library",
  "main": "./dist/forcepoint-shared-components.umd.js",
  "module": "./dist/forcepoint-shared-components.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/forcepoint-shared-components.es.js",
      "require": "./dist/forcepoint-shared-components.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "run-p watch-typescript storybook",
    "prepare": "rm -rf dist && npm run build",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "yalc-publish": "yalc publish --push",
    "watch-typescript": "tsc-watch",
    "prettier": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "create-icons": "node scripts/create-icons.mjs",
    "create-icons-story": "node scripts/create-icons-story.mjs",
    "predev": "rm -rf src/lib/components/02-components/icons/* && npm run create-icons && npm run create-icons-story",
    "prebuild": "rm -rf src/lib/components/02-components/icons/* && npm run create-icons && npm run create-icons-story"
  },
  "dependencies": {
    "next": "^14.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.6.1",
    "@storybook/addon-interactions": "^7.6.1",
    "@storybook/addon-links": "^7.6.1",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/blocks": "^7.6.1",
    "@storybook/react": "^7.6.1",
    "@storybook/react-vite": "^7.6.1",
    "@storybook/testing-library": "^0.2.2",
    "@tailwindcss/typography": "^0.5.10",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.16",
    "camel-case": "^5.0.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-storybook": "^0.6.15",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "rollup-plugin-copy": "^3.5.0",
    "storybook": "^7.6.1",
    "storybook-addon-rtl": "^0.5.0",
    "tailwindcss": "^3.3.5",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^3.6.3",
    "vite-plugin-svgr": "^4.2.0",
    "yalc": "^1.0.0-pre.53"
  },
  "peerDependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
